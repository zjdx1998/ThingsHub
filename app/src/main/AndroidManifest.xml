<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.neu.madcourse.thingshub">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThingsHub">
        <activity

            android:name=".FrontEnd.AddFriendActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FrontEnd.FriendActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>
        <activity

            android:name=".FrontEnd.ThingsList_activity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FrontEnd.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FrontEnd.TestActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".FrontEnd.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrontEnd.AddThing_activity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.ThingsHub"/>
        <activity
            android:name=".FrontEnd.AccountActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat"
            android:exported="false"/>
    </application>

</manifest>